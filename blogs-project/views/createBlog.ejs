<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/createBlog.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
    <title>create your blogs</title>
</head>

<body>
    <div class="create-overlay">
        <div class="createBlog">
            <div class="profil">
                <img src="../images/clouds-5.jpg" alt="">
                <div class="name-email">
                    <span class="name">
                        <%= name %>
                    </span>
                    <span class="email">
                        <%= email %>
                    </span>
                </div>
                <a href="/blogs"><i class='bx bx-x-circle'></i></a>
            </div>
            <hr style="width: 100%; color: #4702a8;">
            <div class="displayImg">
                <img id="display" style="border-radius: 6px;">
            </div>
            <form action="/blogs/create" enctype="multipart/form-data" method="post">
                <textarea name="content" id="content" placeholder="dites quelque chose..."> </textarea>
                <button type="button">
                    <i class='bx bx-image-add'></i>
                    <input type="file" name="image" id="file">
                </button>
                <button type="submit">publier</button>
            </form>
        </div>
    </div>
    <script>
        const input = document.getElementById('file');
        const output = document.getElementById('display');
        input.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                const displayImg = document.querySelector('.displayImg');
                displayImg.style.display='block'
                const reader = new FileReader();
                reader.onload = function (e) {
                    output.src = e.target.result;
                }
                reader.readAsDataURL(file)
            }
        })
    </script>
</body>

</html>